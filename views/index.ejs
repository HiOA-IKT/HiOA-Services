<html>
  <head>
    <link rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap-theme.css">
    <link rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="login.css">
  </head>
  <body>
    <div id="content" class="well">
      <img src="https://www.hioa.no/extension/hioa/design/hioa/images/Hioa-Logo-s_h-orig.png" alt="HiOA Seal of Approval" />
      <% if (message.length > 0) { %>
	<div id="error"><%= message %></div>
      <% } %>
	<form method="POST" action="/login">
	<label for="inputUsername" class="sr-only">Username</label>
	<input type="username" id="inputUsername" name="username" placeholder="Username" class="form-control" required autofocus />
	<label for="inputPassword" class="sr-only">Password</label>
	<input type="password" id="inputPassword" name="password" placeholder="Password" class="form-control" required />
	<button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
      </form>
    </div>
  </body>
</html>
